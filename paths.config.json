{
  "webpack": {
    "context": "./src",
    "output": "./dist",
    "publicPath": "/js/",
    "filename": "[name].js",
    "chunkFilename": "[name].js"
  },

  "root": {
    "src": "./src/",
    "dist": "./dist/",
    "tmp": "./tmp/",
    "tasks": "./tasks/",
    "manifest": "./manifest/",
    "serve": "./dist/**",
    "debug": "./npm-debug.log"
  },

  "pug": {
    "pages": {
      "index": "./pages/index/index.pug",
      "about": "./pages/about/about.pug"
    }
  },

  "styles": {
    "entry": "./src/scss/entry.scss",
    "outDir": "./dist/css/",
    "files": {
      "includePaths": []
    }
  },

  "src": {
    "assets": "./src/assets/**",
    "imagemin": "./src/assets/img/**",
    "spriteSvg": "./src/assets/img/**/*.svg",
    "spritePng": "./src/assets/img/**/*.png"
  },

  "dist": {
    "all": "./dist/**/*",
    "html": "./dist/**/*.html",
    "img": "./dist/img/",
    "sprites": "./dist/sprites/"
  },

  "favicon": {
    "FAVICON_DATA_FILE": "./faviconData.json",
    "masterPicture": "./src/assets/img/favicon.png",
    "dest": "./dist/img/favicon"
  },

  "watch": {
    "assets": "./src/assets/**/*.*",
    "pug": "./src/**/*.pug",
    "styles": "./src/**/*.scss"
  }
}
